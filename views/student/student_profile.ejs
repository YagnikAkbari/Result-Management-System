<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@500;700&display=swap"
    />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/student_profile.css" />
    <title><%= pageTitle %></title>
    <style>
      .dropdown {
        display: none;
      }
    </style>
  </head>
  <body>
    <nav>
      <div class="container">
        <a href="/student"
          ><img src="images/ldrp_logo.png" alt="ldrp_logo"
        /></a>
        <div class="menus">
          <form action="./student_profile.html">
            <button type="submit" class="profileBtn btns active">
              <img src="images/user.svg" alt="user" class="fa-icon active" />
              Profile
            </button>
          </form>
          <form action="/logout" method="post">
            <button type="submit" class="submitBtn btns">
              <img src="images/logout.svg" alt="user" class="fa-icon" />
              Logout
            </button>
          </form>
        </div>
      </div>
    </nav>
    <div class="info">
      <div class="card">
        <div>
          <div>
            <label>Name:</label><br />
            <p><%=user?.Name%></p>
          </div>
        </div>

        <div>
          <div>
            <label>Division:</label><br />
            <p><%=user?.Div%></p>
          </div>
          <div>
            <label>Enrollment:</label><br />
            <p><%=user?.EnrollmentNo%></p>
          </div>
        </div>

        <div>
          <div>
            <label>Batch:</label><br />
            <p><%= user?.Batch %></p>
          </div>
          <div>
            <label for="">Branch:</label><br />
            <p><%= user?.Branch %></p>
          </div>
        </div>

        <div>
          <div>
            <label for="">Email:</label><br />
            <p><%= user?.Email %></p>
          </div>
          <div>
            <label for="">College Email:</label><br />
            <p><%= user?.collegeEmail %></p>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
